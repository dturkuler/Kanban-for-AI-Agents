{
    "name": "kanban-for-ai-agents",
    "displayName": "Kanban for AI Agents",
    "description": "Programmatic Kanban board management for AI coding assistants - create, track, and manage tasks via markdown files",
    "version": "0.0.1",
    "publisher": "doganturkuler",
    "author": {
        "name": "Dogan Turkuler",
        "email": "dogan.turkuler@gmail.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/doganturkuler/kanban-for-ai-agents"
    },
    "bugs": {
        "url": "https://github.com/doganturkuler/kanban-for-ai-agents/issues"
    },
    "homepage": "https://github.com/doganturkuler/kanban-for-ai-agents#readme",
    "keywords": [
        "kanban",
        "ai",
        "agents",
        "task management",
        "markdown",
        "project management",
        "automation"
    ],
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other",
        "Visualization"
    ],
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "kanban.openBoard",
                "title": "Kanban: Open Board"
            },
            {
                "command": "kanban.createBoard",
                "title": "Kanban: Create Board"
            },
            {
                "command": "kanban.deleteBoard",
                "title": "Kanban: Delete Board"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/js-yaml": "^4.0.9",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "js-yaml": "^4.1.1"
    }
}